generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Para fins do desafio, vou usar sqlite por ser mais fácil e não precisa instalar nada 
  url      = env("DATABASE_URL")
}

model Badge {
  id    Int      @default(autoincrement()) @id
  slug  String   @unique
  name  String
  image String
  users UserBadge[]
}

model User {
  id      Int        @default(autoincrement()) @id
  steamid String     @unique
  name    String
  badges  UserBadge[]
}

model UserBadge {
  userId  Int
  badgeId Int
  user    User      @relation(fields: [userId], references: [id])
  badge   Badge     @relation(fields: [badgeId], references: [id])
  acquiredAt DateTime @default(now())

  @@id([userId, badgeId])
  @@unique([userId, badgeId])
}